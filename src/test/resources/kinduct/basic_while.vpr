method t11(r: Ref) returns ()
  requires r != null
{
    var j: Int := 2

    while (j < 3)
        //:: ExpectedOutput(invariant.not.established:insufficient.permission)
        invariant r != null && r.f == 2
    {
        j := j+1
    }
}
