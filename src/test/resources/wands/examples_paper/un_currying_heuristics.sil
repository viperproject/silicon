/* See un_currying.sil */

field __CONFIG_HEURISTICS: Bool /* Activates heuristics */

/* The predicates are abstract (no bodies) - in principle, these represent any self-framing assertion */
predicate P()
predicate Q()
predicate R()

/* Define short-hands for the sake of readability */
define A acc(P())
define B acc(Q())
define C acc(R())

/* A --* B --* C  ==>  A * B --* C */
method uncurry() 
  requires A --* (B --* C)
  ensures A && B --* C
{
  // works automatically!
}

/* A * B --* C  ==>  A --* B --* C */
method curry() 
  requires A && B --* C
  ensures A --* (B --* C)
{
  // works automatically!
}
