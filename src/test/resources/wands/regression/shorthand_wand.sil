field f: Int

method test01(x: Ref)
  requires acc(x.f, write)
  ensures acc(x.f, write)
{
  package true --* acc(x.f, write)

  wand w := true --* acc(x.f, write)

  apply w
}

method test02(x: Ref)
  requires acc(x.f, write)
  ensures acc(x.f, write)
{
  define A true
  define B acc(x.f, write)

  package A --* B
  wand w := A --* B

  apply w
}

method test03(xs: Ref) {
  while (xs != null) {
    package true --* true
    wand w := true --* true
  }
}

method test04(xs: Ref) {
  wand w := true --* true

  //:: ExpectedOutput(apply.failed:wand.not.found)
  apply w
}

predicate P(x: Ref) { true }

method test05(r: Ref) {
  var x: Ref
  var y: Ref

  inhale acc(P(x)) --* true
  wand w := acc(P(x)) --* true

  inhale acc(P(x))

  y := x
  x := r

  assert acc(P(y))
  apply w
}

method test06(r: Ref) {
  var x: Ref
  var y: Ref

  inhale acc(P(x)) --* true
  wand w := acc(P(x)) --* true

  y := x
  x := r

  package true --* folding P(y) in applying w in true
}
