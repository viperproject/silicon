field f: Int

method quantifiedPerm1(xs: Seq[Ref]) {
  assume @dependency("Explicit")(|xs| > 5)
  inhale @dependency("Explicit")(forall x: Ref :: x in xs ==> acc(x.f))

  inhale xs[0] != xs[1]

  var i: Int
  @irrelevant("SourceCode")
  i := 0

  // $PrecisionTest: $READ_WRITE=xs[i].f,xs[1].f $INVARIANT=|xs|>0 $ACC_INVARIANT=forall$_$x:Ref::x$_$in$_$xs$_$==>$_$acc(x.f)

  @testAssertion()
  xs[0].f := 10
}

