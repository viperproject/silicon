method loop4(){
    var i: Int
    var res: Int
    @dependency()
    res := 0
    @irrelevant()
    i := 10
    while(@irrelevant()(i > 0))
        invariant @irrelevant()(i <= 10)
        invariant @irrelevant()(i >= 0)
        invariant @dependency()(res >= 0)
    {
        res := res - 1
        @irrelevant()
        i := i - 1
        @dependency()
        assume res > 0
    }

    @testAssertion()
    assert res >= 0
}