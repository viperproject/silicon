method loop4(){
    var i: Int
    var res: Int
    @dependency("Implicit")
    res := 0
    @irrelevant("Implicit")
    i := 10
    while(@irrelevant("PathCondition")(i > 0))
        invariant @irrelevant("LoopInvariant")(i <= 10)
        invariant @irrelevant("LoopInvariant")(i >= 0)
        invariant @dependency("LoopInvariant")(res >= 0)
    {
        res := res - 1
        @irrelevant("Implicit")
        i := i - 1
        @dependency("Explicit")
        assume res > 0
    }

    @testAssertion("Explicit")
    assert res >= 0
}