
method loop1(){
    var i: Int
    var res: Int
    res := 0
    i := 10
    while(i > 0)
        invariant @irrelevant()(i <= 10)
        invariant @irrelevant()(i >= 0)
        invariant @dependency()(res >= 0)
    {
        @dependency()
        res := res + i
        i := i - 1
    }

    @testAssertion()
    assert res >= 0
}

