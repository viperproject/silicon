field f: Int

method sum(x: Int, y: Int) returns(res: Int)
  requires x >= 0 && y >= 0
  ensures res == x + y
{
 res := x + y
}

method sumUnverified(x: Int, y: Int) returns(res: Int)
  requires x >= 0 && y >= 0
  ensures res == x + y
  ensures res >= 0

method abs(x: Ref) 
  requires acc(x.f)
  ensures acc(x.f)
  ensures x.f >= 0
{
 if(x.f < 0){
  x.f := -x.f
 }
}

method call1(){
    var x: Int, y: Int
    @dependency("Explicit")
    assume x > 10
    @dependency("Explicit")
    assume y > 0

    // $PrecisionTest: $READ_ONLY=x,y $INVARIANT=y>-5

    @testAssertion("ImplicitPostcondition")
    x := sum(x, y)
}

method call2(){
    var x: Int, y: Int, z: Int
    @dependency("Explicit")
    assume x > 10
    @dependency("Explicit")
    assume y > 0

    @dependency("ImplicitPostcondition")
    z := sum(x, y)

    // $PrecisionTest: $READ_ONLY=x,y,z $INVARIANT=x>0

    @testAssertion("Explicit")
    assert z == x + y
}

method call3(x: Int, y: Int)
{
  @dependency("Explicit")
  assume x > 0
  @dependency("Explicit")
  assume y > 0

  var n: Int, n2: Int
  @dependency("ImplicitPostcondition")
  n := sumUnverified(x, y)

  // $PrecisionTest: $READ_WRITE=n2 $READ_ONLY=x,y,n $INVARIANT=x>0

  @dependency("ImplicitPostcondition")
  n2 := sumUnverified(x, y)
  @dependency("Implicit")
  n := n + n2

  @testAssertion("Explicit")
  assert n == 2*x + 2*y
}


method call4(x: Int, y: Int, z: Int)
{
  @dependency("Explicit")
  assume x > 0
  @dependency("Explicit")
  assume y > 0

  @irrelevant("Explicit")
  assume z > 0

  var n: Int, n2: Int
  @dependency("ImplicitPostcondition")
  n := sum(x, y)

  // $PrecisionTest: $READ_WRITE=n2 $READ_ONLY=n,z,x,y $INVARIANT=x>0

  @irrelevant("ImplicitPostcondition")
  n2 := sum(x, z)

  @testAssertion("Explicit")
  assert n == x + y
}

method absClient1(x: Ref)
  requires @dependency("Precondition")(acc(x.f))
  requires @irrelevant("Precondition")(x.f > 0)
{
  @dependency("ImplicitPostcondition")
  abs(x)

  @testAssertion("Explicit")
  assert x.f >= 0
}