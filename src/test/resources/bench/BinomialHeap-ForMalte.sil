        prevTemp := temp
        temp := temp.sibling
      }

      unfold heapseg(minNode, null)
      prevTemp.sibling := temp.sibling
      fold heapseg(prevTemp, null)
      concat(nodes, prevTemp, null)
    }

    var oldTreeSize: Int := treeSize(temp)
    unfold tree(temp)
    temp := temp.child
