      prevTemp := temp
      temp := temp.sibling
      fold heapseg(temp, temp)
      fold heapseg(prevTemp, temp)
      unfold heapseg(temp, null)
      concat(fakeNode, prevTemp, temp)
      fold heapseg(temp, null)
    }

    var r: Ref
