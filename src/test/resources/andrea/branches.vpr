
field f: Int


method foo(a: Int, b: Int)
{
  var n:Int, c: Bool

  assume a > 0
  assume b > 0

  if(c){
    n := a + 1
  }else{
    n := b + 1
  }

  var x: Int
  if(a >= n){
    x := a + b
  }else{
    x := n + 1
    assert x >= 1
  }
  assert x > n
}


method fooPerm(a: Ref, b: Ref)
  requires acc(a.f) && acc(b.f)
{
  var n:Int, c: Bool

  assume a.f > 0
  assume b.f > 0

  if(c){
    n := a.f
  }else{
    n := b.f
  }

  var x: Int := 0
  if(a.f > n){
    x := a.f + b.f
  }else{
    x := n
    assert x >= 1
  }
  assert x >= n
}