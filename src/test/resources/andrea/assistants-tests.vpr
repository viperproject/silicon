method alias1(a: Ref, b: Ref, c: Ref)
    requires acc(a.f) && acc(b.f)
{
    var x: Int
    if (c == a) {
        x := c.f
    }
    if(c == b) {
        x := c.f
        assume a == c
        assert x == a.f
        assert false
    }


    assume a == c
    assert x == a.f
}

method alias2(a: Ref, b: Ref, c: Ref)
    requires acc(a.f) && acc(b.f)
    requires a != b
{
    var x: Int
    if (c == a) {
        x := c.f
    } else {
        if(c == b) {
            x := c.f
        }
    }

    assume a == c
    assert x == a.f
}

